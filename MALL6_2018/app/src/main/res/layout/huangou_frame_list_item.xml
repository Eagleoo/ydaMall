<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/huangou_list_item_line"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/huangou_list_item_img"
            android:layout_width="80.0dip"
            android:layout_height="90.0dip"
            android:layout_gravity="left|center"
            android:layout_margin="5.0dip"
            android:src="@drawable/zw174" />

        <ImageView
            android:id="@+id/huangou_list_item_img_null"
            android:layout_width="80.0dip"
            android:layout_height="90.0dip"
            android:layout_gravity="left|center"
            android:layout_margin="5.0dip"
            android:src="@drawable/shop_null"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@id/huangou_list_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="我是产品名字"
            android:textColor="#ff535353"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商币兑换："
                        android:textColor="#ff535353"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/huangou_list_item_sbdh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="650"
                        android:textColor="#0EB720"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <TextView
                    android:id="@id/huangou_list_item_shoujia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:text="市场售价：￥65000"
                    android:textColor="#ffbbbbbb"
                    android:textSize="13.0sp"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="远大售价："
                android:textColor="#ff535353"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/huangou_list_item_yuanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#ffcf0000"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=" — 可用消费券："
                android:textColor="#ff535353"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/huangou_list_item_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#ffcf0000"
                android:textSize="13.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_bk1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="立即购买"
            android:textColor="@color/bg"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>