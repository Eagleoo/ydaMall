<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_list_item_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="@drawable/btn_green1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" 
  android:layout_above="@+id/product_list_item_name"
                         >

        <ImageView
            android:id="@+id/product_list_item_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/zw174" 
            android:layout_centerInParent="true"
                  />
        
        <ImageView 
            android:id="@+id/badgeiv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/goodslefttop"
            android:layout_alignParentRight="true"
           android:layout_marginLeft="5dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_above="@+id/product_list_item_yuanda_price"
        android:id="@+id/product_list_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="奥派阿西 2015春季新款纯色小脚裤..."
        android:textColor="#000000"
        android:textSize="13sp" >
    </TextView>

    <TextView
        android:layout_above="@+id/tag1"
        android:id="@+id/product_list_item_yuanda_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="left"
        android:text="￥139.55"
        android:textColor="#FF2145"
        android:textSize="13sp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="商币："
            android:textColor="#666666"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/product_list_item_sbj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="717"
            android:textColor="#ff6ac334"
            android:textSize="20sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="远大售价："
            android:textColor="#666666"
            android:textSize="14sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tag1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
   
        android:layout_marginTop="2dp" 
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="可用消费券："
            android:textColor="#000000"
            android:textSize="10sp" >
        </TextView>

        <TextView
            android:id="@+id/product_list_item_yuanda_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="139.55"
            android:textColor="#ff6ac334"
            android:textSize="10sp" >
        </TextView>
    </LinearLayout>

</RelativeLayout>