<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/staff_manager_user_reward_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lottery_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:drawableTop="@drawable/ic_launcher"
        android:gravity="center"
        android:text="双色球"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/lottey_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lottery_type"
        android:layout_toRightOf="@+id/lottery_type"
        android:singleLine="true"
        android:text="订单编号："
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lottey_amount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lottery_type"
        android:text="购买金额：" />

    <TextView
        android:id="@+id/lottey_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lottey_amount1"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/lottery_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lottery_type"
        android:layout_alignBottom="@+id/lottery_type"
        android:layout_alignLeft="@+id/lottey_amount1"
        android:text="下注时间：" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/al" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lottery_time"
        android:layout_alignBottom="@+id/lottery_time"
        android:layout_alignRight="@+id/imageView1"
        android:text="未中奖"
        android:visibility="gone" />

</RelativeLayout>