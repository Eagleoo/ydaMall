<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        layout="@layout/top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="60.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" >

                <TableLayout
                    android:id="@+id/MorePageTableLayout_Follow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liner_border_white"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="0.7"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="姓名："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/student_name"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.3"
                            android:background="@drawable/liner_border_white"
                            android:hint="请输入您的姓名"
                            android:lines="1"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textColor="#ff535353"
                            android:textColorHint="#c6c6c6"
                            android:textSize="16.0sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0"
                            android:background="#f0f0f0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="0.7"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="学号："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/student_stuNo"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.3"
                            android:background="@drawable/liner_border_white"
                            android:hint="请输入您的学号"
                            android:lines="1"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textColor="#ff535353"
                            android:textColorHint="#c6c6c6" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0"
                            android:background="#f0f0f0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="0.7"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="学校名称："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/student_schoolName"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:background="@drawable/liner_border_white"
                            android:hint="请输入您的学校名称"
                            android:lines="1"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textColor="#ff535353"
                            android:textColorHint="#c6c6c6" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/liner_border_white"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0"
                            android:background="#f0f0f0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <ImageView
                            android:id="@+id/student_stuImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:adjustViewBounds="true"
                            android:paddingRight="5dp"
                            android:src="@drawable/student_xueshengzheng" >
                        </ImageView>

                        <ImageView
                            android:id="@+id/student_stuImage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:adjustViewBounds="true"
                            android:paddingRight="5dp"
                            android:src="@drawable/student_xueshengzheng" >
                        </ImageView>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="5.0dip"
                            android:text="注：请上传学生证或相关信息图片。(若您的学生证不包含学校信息或个人相片或个人信息，请上传有相关信息的图片)"
                            android:textColor="#535353"
                            android:textSize="14.0sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="1.0dip"
                            android:layout_weight="1.0"
                            android:background="#f0f0f0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <ImageView
                            android:id="@+id/student_idCardImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:src="@drawable/student_shenfenzheng" >
                        </ImageView>

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="5.0dip"
                            android:text="注：请上传你的身份证正面(务必保持画面清晰，五官有效)"
                            android:textColor="#535353"
                            android:textSize="14.0sp" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/cb_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/community_cb_check_selector"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/tv_agree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我已阅读并同意《大学生空间合同》"
                        android:textColor="#535353"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/student_submite"
                        android:layout_width="0.0dip"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/button_submit_background"
                        android:text="确认"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/student_clear"
                        android:layout_width="0.0dip"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/button_reset_background"
                        android:text="清空"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>