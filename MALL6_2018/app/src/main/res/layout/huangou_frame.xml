<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        layout="@layout/goods_type_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#ea617a" >

        <RadioButton
            android:id="@id/hgq_frame_rehuan"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/lmsj_frame_jl_white"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="热换商品"
            android:textColor="@color/white"
            android:textSize="13.0sp" />

        <RadioButton
            android:id="@id/hgq_frame_fenlei"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/lmsj_frame_fl_white"
            android:drawablePadding="2.0dip"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="全部分类"
            android:textColor="@color/white"
            android:textSize="13.0sp" />

        <RadioButton
            android:id="@id/hgq_frame_jiage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/lmsj_frame_px_white"
            android:drawablePadding="2.0dip"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="价格排序"
            android:textColor="@color/white"
            android:textSize="13.0sp" />
    </LinearLayout>

    <ScrollView
        android:id="@id/hgq_selected_line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <LinearLayout
            android:id="@id/hgq_selected_dataLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical" />
    </ScrollView>

    <ListView
        android:id="@id/huangou_frame_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#ffeeeeee"
        android:divider="#ffefefef"
        android:dividerHeight="1.0dip" />

</LinearLayout>