<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/classListTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include
            android:id="@id/top_top"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            layout="@layout/top" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classListTop"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@id/ga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏名称：" />

        <Spinner
            android:id="@id/game_p_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g1"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@id/gb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏类型：" />

        <Spinner
            android:id="@id/game_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g2"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@id/gc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面       值：" />

        <TextView
            android:id="@id/game_mz"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff0000ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g3"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@id/gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单       价：" />

        <TextView
            android:id="@id/game_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff0000ff" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g4"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@id/ge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数       量：" />

        <Spinner
            android:id="@id/game_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g5"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@id/gf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总       价：" />

        <TextView
            android:id="@id/game_count_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff6633" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/g7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g6"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_horizontal" >

        <Button
            android:id="@id/game_commitBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="开始充值" />
    </LinearLayout>

    <ImageView
        android:id="@id/gameAdvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/g7"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/game_advert"
        android:visibility="gone"
        />

</RelativeLayout>