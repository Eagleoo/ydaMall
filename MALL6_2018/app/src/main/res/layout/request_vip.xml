<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:gravity="fill"
    android:isScrollContainer="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/proxySiteTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            layout="@layout/top" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proxySiteTop"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="60.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/liner_border_white"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@drawable/liner2_bottom_border"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="辅导老师："
                        android:textColor="#535353"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/vip_zsdw"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/liner_border_white"
                        android:hint="请输入您的辅导老师"
                        android:lines="1"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip"
                        android:singleLine="true"
                        android:textColorHint="#c6c6c6" />
                </TableRow>

                <TableRow
                    android:id="@+id/vip_name_2_2"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@drawable/liner2_bottom_border"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/request_vip_line_name"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1.0"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="辅导老师："
                        android:textColor="#535353"
                        android:textSize="16.0sp"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@drawable/liner2_bottom_border"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="申请金额："
                        android:textColor="#535353"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/vip_money"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/liner_border_white"
                        android:enabled="false"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text="38.00" />
                </TableRow>

                <TableRow
                    android:id="@+id/vip_two_line"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="交易密码："
                        android:textColor="#535353"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@id/vip_twoPwd"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/liner_border_white"
                        android:hint="请填写交易密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip"
                        android:singleLine="true"
                        android:textColorHint="#c6c6c6" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="支付方式："
                android:textColor="#535353" >
            </TextView>

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                layout="@layout/pay_money_type_style" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@id/vip_submit"
                    android:layout_width="0.0dip"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_submit_background"
                    android:padding="5dp"
                    android:text="确认"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@id/vip_clear"
                    android:layout_width="0.0dip"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_reset_background"
                    android:padding="5dp"
                    android:text="清空"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>