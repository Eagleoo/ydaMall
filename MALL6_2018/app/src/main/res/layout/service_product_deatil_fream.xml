<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        layout="@layout/top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffefefef"
            android:orientation="vertical" >

            <Gallery
                android:id="@id/service_product_images"
                android:layout_width="fill_parent"
                android:layout_height="130.0dip"
                android:spacing="5.0dip"
                android:unselectedAlpha="1.0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:layout_gravity="center_vertical"
                android:background="#fff9f9f9"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <TextView
                    android:id="@id/service_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="123"
                    android:textColor="#ffcf0000"
                    android:textSize="20.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="元"
                    android:textColor="#ffcf0000"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@id/service_priduct_scj"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="150元"
                    android:textColor="#ffc0c0c0"
                    android:textSize="13.0sp" />

                <Button
                    android:id="@id/service_product_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_gravity="right"
                    android:background="@drawable/liner2_border_red"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip"
                    android:paddingTop="5.0dip"
                    android:text="立即购买"
                    android:textColor="#ffffffff"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <TextView
                android:id="@id/service_product_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="我是一个服务型商品的名称"
                android:textColor="#ff535353"
                android:textSize="18.0sp" />

            <TextView
                android:id="@id/service_product_shortTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="我是一个服务型商品的简短标题"
                android:textColor="#ff535353"
                android:textSize="14.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ffcccccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:padding="10.0dip" >

                    <TextView
                        android:id="@id/service_product_zssb"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:drawableLeft="@drawable/buzhichi"
                        android:drawablePadding="5.0dip"
                        android:tag="sb"
                        android:text="支持赠送商币"
                        android:textColor="#ff535353" />

                    <TextView
                        android:id="@id/service_product_zsjf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:drawableLeft="@drawable/buzhichi"
                        android:drawablePadding="5.0dip"
                        android:tag="jf"
                        android:text="支持赠送消费券"
                        android:textColor="#ff535353" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="#ffcccccc" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:padding="10.0dip" >

                    <TextView
                        android:id="@id/service_product_sbdh"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:drawableLeft="@drawable/buzhichi"
                        android:drawablePadding="5.0dip"
                        android:paddingLeft="5.0dip"
                        android:tag="sbdh"
                        android:text="支持商币兑换"
                        android:textColor="#ff535353" />

                    <TextView
                        android:id="@id/service_product_jfhg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:drawableLeft="@drawable/buzhichi"
                        android:drawablePadding="5.0dip"
                        android:paddingLeft="5.0dip"
                        android:tag="jfhg"
                        android:text="支持消费券换购"
                        android:textColor="#ff535353" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ffcccccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="商家信息"
                    android:textColor="#ff535353"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ff2ae0c8" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/service_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="我是一个服务型商品的名称"
                            android:textColor="#ff535353"
                            android:textSize="13.0sp" />

                        <TextView
                            android:id="@id/service_product_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.0dip"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="顺城大街308号H座15楼"
                            android:textColor="#ff535353"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:background="#ffcccccc" />

                    <ImageView
                        android:id="@id/service_product_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5.0dip"
                        android:src="@drawable/lmsj_bddh" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="套餐详情"
                    android:textColor="#ff535353"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ff2ae0c8" />

                <TextView
                    android:id="@id/service_product_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff535353"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="买家须知"
                    android:textColor="#ff535353"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ff2ae0c8" />

                <TextView
                    android:id="@id/service_product_shopInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff535353"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="售后须知"
                    android:textColor="#ff535353"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ff2ae0c8" />

                <TextView
                    android:id="@id/service_product_service"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff535353"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>