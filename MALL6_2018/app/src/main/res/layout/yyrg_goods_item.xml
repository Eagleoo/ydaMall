<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/new_yda__top_zanwu" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/goodsname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="呵呵呵呵"
            android:textColor="@color/yyrg_shouye_zi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="价格："
            android:textColor="@color/yyrg_qianhui"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

           
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linn1"
                android:layout_toLeftOf="@+id/addcart"
                android:layout_centerVertical="true"
                >
                 <com.mall.yyrg.MyProgressView
                android:id="@+id/progress"
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >
            </com.mall.yyrg.MyProgressView>
                <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/canyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="390"
                    android:textColor="@color/yyrg_progress"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="8.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zongxu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="390"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="总需人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="8.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shengyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="390"
                    android:textColor="@color/yyrg_shouye_lanzi"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="剩余人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="8.0sp" />
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>
            <ImageView 
                android:id="@+id/addcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyrg_goodscart"
                />
        </RelativeLayout>
        

    </LinearLayout>

</LinearLayout>