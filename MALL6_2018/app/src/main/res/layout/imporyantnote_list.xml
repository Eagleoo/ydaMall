<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headertop" >

        <TextView
            android:id="@+id/top_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/topback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="重要记事"
            android:textColor="@color/bg"
            android:textSize="20sp" />
    </RelativeLayout>
 <LinearLayout
     android:layout_below="@+id/re1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/yyrg_my_shenfen" >
            </LinearLayout>

            <TextView
                android:id="@+id/all_jishi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/yyrg_topcolor"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:text="全部记事"
                android:textColor="@color/bg"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/yyrg_my_shenfen" >
            </LinearLayout>

            <TextView
                android:id="@+id/regou_jinxing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:text="进行中"
                android:textColor="@color/yyrg_topcolor"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/yyrg_my_shenfen" >
            </LinearLayout>

            <TextView
                android:id="@+id/regou_jiexiao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:text="已揭晓"
                android:textColor="@color/yyrg_topcolor"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/yyrg_my_shenfen" >
            </LinearLayout>
        </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/js_srarch"
            android:padding="5dp"
            android:text="搜索"
            android:visibility="gone"
            android:textColor="@color/js_xiaozi"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="#f0f0f0" >
        </LinearLayout>

        


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/js_all_js"
            android:padding="5dp"
            android:text="全部记事"
            android:textColor="@color/js_xiaozi"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0" >
        </LinearLayout>

        <TextView
            android:id="@+id/qingkong_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/js_qingchu"
            android:padding="5dp"
            android:text="全部提醒"
            android:textColor="@color/js_xiaozi"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="#f0f0f0" >
        </LinearLayout>

        <TextView
            android:id="@+id/js_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/js_setting"
            android:padding="5dp"
            android:visibility="gone"
            android:text="设置"
            android:textColor="@color/js_xiaozi"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0" >
        </LinearLayout>

        <TextView
            android:id="@+id/js_rili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/js_about"
            android:padding="5dp"
            android:text="日历"
            android:textColor="@color/js_xiaozi"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/add_js"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/js_huatong" />
    </LinearLayout>

</RelativeLayout>