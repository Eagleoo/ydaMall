<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/title_ic"
                    android:layout_width="134px"
                    android:layout_height="136px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="42px"
                    android:layout_marginRight="42px"
                    android:src="@drawable/cartitleiv1" />

                <View
                    android:layout_width="5px"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:background="#e3e4e4" />


                <com.mall.view.AutoPollRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="27px"
                    android:layout_weight="1"
                    android:background="#ffffff" />


            </LinearLayout>

            <View
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="#CF1731" />
    </LinearLayout>


</layout>
