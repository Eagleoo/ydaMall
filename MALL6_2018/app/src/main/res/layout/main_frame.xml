<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_dibu_touming">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/new_dibu_touming"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/new_dibu_touming">

            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:background="@drawable/new_dibu_touming"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@id/console_line_bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="bottom"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/homeButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/new_page_shouye_1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="首页"
                            android:textColor="#49afef"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/huodong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/squnch"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="商圈"
                            android:textColor="@color/new_xiaozi"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/fujin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/main_office"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="便民"
                            android:textColor="@color/new_xiaozi"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/xinqing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/bottom_find"
                            android:gravity="center"
                            android:text="发现"
                            android:textColor="@color/new_xiaozi"
                            android:textSize="10sp" />


                        <RelativeLayout
                            android:id="@+id/personrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/my_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@drawable/new_page_my"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="我的"
                                android:textColor="@color/new_xiaozi"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/imageup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/reddot"
                                android:visibility="invisible" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/main_shadom5"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/main_shadom_2"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </TabHost>


    <com.mall.view.DragFloatActionButton
        android:id="@+id/fab_add_comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="125dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/dragfloatred"
        android:visibility="gone" />

</RelativeLayout>
