<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white" >
    </LinearLayout>
    <TextView
        android:id="@+id/popup_share_user"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="邀请【会员注册】"
        android:textColor="@color/white"
        android:textSize="15sp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white" >
    </LinearLayout>

    <TextView
        android:id="@+id/popup_share_mallApp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="下载【远大云商】"
        android:textColor="@color/white"
        android:textSize="15sp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white" >
    </LinearLayout>

    <TextView
        android:id="@+id/popup_share_lmsjApp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="下载【远大商圈】"
        android:textColor="@color/white"
        android:textSize="15sp" >
    </TextView>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white" >
    </LinearLayout>

    <TextView
        android:id="@+id/popup_share_cy6App"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="下载【远大创业】"
        android:textColor="@color/white"
        android:textSize="15sp" >
    </TextView>

</LinearLayout>