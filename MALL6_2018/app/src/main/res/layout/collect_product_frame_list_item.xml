<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rightangle"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/collect_item_img"
            android:layout_width="80.0dip"
            android:layout_height="95.0dip"
            android:layout_margin="5.0dip"
            android:adjustViewBounds="true"
            android:src="@drawable/zw174" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10.0dip">

            <TextView
                android:id="@+id/collect_item_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:text="商品名称"
                android:textColor="#ff535353" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/isshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textColor="#ff535353" />

                <TextView
                    android:id="@+id/collect_item_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:gravity="bottom"
                    android:text="2013-10-10"
                    android:textColor="#ff535353" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/collect_item_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/ellipsered"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="前去购买"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/collect_item_quit"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/ellipsered"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="取消收藏"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
