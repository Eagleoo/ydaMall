<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lins1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/headertop"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:background="@color/headertop" >

        <TextView
            android:id="@+id/top_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/topback" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="体系内会员"
            android:textColor="@color/bg"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="3dp"
            android:src="@drawable/note_search"
            android:visibility="gone" />

        <TextView
            android:id="@+id/shaixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/sousuo"
            android:drawableRight="@drawable/card_xia_jiant"
            android:padding="5dp"
            android:text="筛选"
            android:textColor="@color/bg"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="时间"
            android:textColor="#4B4B4B"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:background="@color/bg"
            android:drawableRight="@drawable/collapse1"
            android:focusableInTouchMode="false"
            android:paddingBottom="7dp"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:text="2014.18.88 "
            android:textColor="#4B4B4B"
            android:textSize="11.0sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="至"
            android:textColor="#4B4B4B"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:background="@color/bg"
            android:drawableRight="@drawable/collapse1"
            android:focusableInTouchMode="false"
            android:paddingBottom="7dp"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:text="2014.18.88 "
            android:textColor="#4B4B4B"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/chaxun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/fufen_anniu_biankuang"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="3dp"
            android:paddingTop="7dp"
            android:text="查询 "
            android:textColor="@color/bg"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5EFFE" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="会员帐号"
            android:textColor="@color/fufen_zi1"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#E5E4E4" >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="会员姓名"
            android:textColor="@color/fufen_zi1"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#E5E4E4" >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="联系方式"
            android:textColor="@color/fufen_zi1"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#E5E4E4" >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="招商人"
            android:textColor="@color/fufen_zi1"
            android:textSize="14sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:divider="#f0f0f0"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>