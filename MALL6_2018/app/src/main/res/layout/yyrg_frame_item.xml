<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/img_renqi1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/new_yda_zanwu1" />

    <TextView
        android:id="@+id/price_renqi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/yyrg_progress"
        android:textSize="11.0sp" />

    <com.mall.yyrg.MyProgressView
        android:id="@+id/pro_renqi1"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >
    </com.mall.yyrg.MyProgressView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yicanyu_renqi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yyrg_progress"
                android:textSize="9.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与人次"
                android:textColor="@color/yyrg_qianhui"
                android:textSize="7.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zongxu_renqi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="10"
                android:textColor="@color/yyrg_qianhui"
                android:textSize="9.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="总需人次"
                android:textColor="@color/yyrg_qianhui"
                android:textSize="7.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shengyu_renqi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="11"
                android:textColor="@color/yyrg_shouye_lanzi"
                android:textSize="9.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="剩余人次"
                android:textColor="@color/yyrg_qianhui"
                android:textSize="7.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>