<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:background="#f37d90">

                <TextView
                    android:id="@+id/top_back"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/topback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="订单支付"
                    android:textColor="@color/bg"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/liner_border_white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/shop_pay_pay_money_product_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:text="需支付："
                        android:textColor="#ff000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/liner_border_white_no_fillet"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/pay_item_xj_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_xj" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="现金账户支付"
                                android:textColor="#535353"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="可咨询4006663838，汇款至远大账户"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_xj_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_item_rec_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_rec" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="充值账户支付"
                                    android:textColor="#535353"
                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/pay_item_rec_ban"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="余额:0.00"
                                    android:textColor="#eb3201"
                                    android:textSize="13sp"></TextView>
                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="支持远大云商会员充值支付"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_rec_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_no_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_item_reccon_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_rec" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="充值+消费券支付"
                                    android:textColor="#535353"
                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/pay_item_reccon_rec_ban"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="1231230.00"
                                    android:textColor="#eb3201"
                                    android:textSize="13sp"></TextView>

                                <TextView
                                    android:id="@+id/pay_item_reccon_con_ban"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="1231230.00"
                                    android:textColor="#8ed35f"
                                    android:textSize="13sp"></TextView>
                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="使用远大充值+消费券换购支付"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_reccon_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_no_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_item_sto_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_sb" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="购物卡账户支付"
                                    android:textColor="#535353"
                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/pay_item_sto_ban"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="余额:0"
                                    android:textColor="#f32e0c"
                                    android:textSize="13sp"></TextView>
                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="支持远大云商会员购物卡账户"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_sto_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_no_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_item_sb_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_sb" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="商币账户支付"
                                    android:textColor="#535353"
                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/pay_item_sb_ban"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="余额:0"
                                    android:textColor="#f32e0c"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="支持远大云商会员商币兑换"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_sb_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_no_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_item_weixin_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_weixin" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="微信支付"
                                android:textColor="#535353"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="推荐安装微信5.0及以上版本的使用"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_weixin_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_no_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay_item_uppay_line"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liner2_bottom_border"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_uppay" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="银联支付"
                                android:textColor="#535353"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="支持储蓄卡信用卡，无需开通网银"
                                android:textColor="#999999"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pay_item_uppay_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pay_item_no_checked" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/pay_money_frame_two_line"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="您的交易密码："
                            android:textColor="#ff535353" />

                        <EditText
                            android:id="@id/shop_pay_pay_twoPwd"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/liner_border_white_no_fillet"
                            android:gravity="center_vertical"
                            android:hint="请输入您的交易密码"
                            android:inputType="textPassword"
                            android:padding="5dp"
                            android:textColor="#ff535353"
                            android:textColorHint="#c6c6c6" />
                    </LinearLayout>

                    <Button
                        android:id="@id/pay_submit_payMoney"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:background="@color/yyrg_topcolor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="确认支付"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>