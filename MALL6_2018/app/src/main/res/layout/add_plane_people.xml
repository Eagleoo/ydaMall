<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_blue" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="乘机人姓名"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/eidt_width_no_stoke"
                android:hint="必填"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/resutrant"
                android:textColorHint="#c6c6c6"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="乘机人类型"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plane_people_age"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/al"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="成人票(>12岁)"
                android:textColor="@color/resutrant"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="证件类型"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zhengjian"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/al"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="身份证"
                android:textColor="@color/resutrant"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <LinearLayout
            android:id="@+id/birthdaylayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="出生日期"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/eidt_width_no_stoke"
                android:hint="如:1990-01-12"
                android:paddingLeft="10dp"
                android:textColor="@color/resutrant"
                android:textColorHint="#c6c6c6"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="证件号码"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/zjhm"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/eidt_width_no_stoke"
                android:hint="必填"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/resutrant"
                android:textColorHint="#c6c6c6"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="电话号码"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/eidt_width_no_stoke"
                android:hint="必填"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/resutrant"
                android:textColorHint="#c6c6c6"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="购买保险"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/baoxian"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/al"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="0  份"
                android:textColor="@color/resutrant"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/resturant_button_selector"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#f0f0f0"></LinearLayout>

        <TextView
            android:id="@+id/changyong"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/al"
            android:gravity="center_vertical"
            android:text="从常用乘机人中选择"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"></LinearLayout>
    </LinearLayout>

</LinearLayout>