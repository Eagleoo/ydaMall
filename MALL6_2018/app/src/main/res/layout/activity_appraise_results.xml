<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mall.view.AppraiseResultsActivity"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="#FF2145">

        <TextView
            android:id="@+id/top_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/community_topback_selector"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="评价完成"
            android:textColor="@color/bg"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/wancheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="完成"
            android:layout_marginRight="@dimen/space_10"
            android:textColor="@color/bg"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <com.mall.view.MoreTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感谢您的评价"
            android:layout_centerInParent="true"
            app:drawable_src="@drawable/community_uploadpic_data_select"
            android:gravity="center"
            app:imageHight="@dimen/space_16"
            app:imageWidth="@dimen/space_16"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="@dimen/space_9"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:src="@drawable/darkredbox1"
        />

    <ImageView
        android:id="@+id/ivbaner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banneright"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="25dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:background="#A1A1A1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="您可能感兴趣的"
        android:gravity="center"
        android:textColor="#A1A1A1"
        android:background="@drawable/key"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />



</RelativeLayout>
    <ListView
        android:id="@+id/recommendmerchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
