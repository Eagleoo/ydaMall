<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.6"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/take_off_time"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="07:00"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/feiji_jiantou" />

            <TextView
                android:id="@+id/landing_time"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="09：35"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|right"
                android:text="￥700元"
                android:textColor="@color/price_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/take_off_airport"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="双流t2"
                android:textColor="@color/resutrant"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/landing_airport"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="首都机场T1"
                android:textColor="@color/resutrant"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dicount_info"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/al2"
                android:gravity="center_vertical|right"
                android:text="50%    "
                android:textColor="@color/resutrant"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/plane_company_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plane_shenzheng" />

            <TextView
                android:id="@+id/plane_type"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:text="海航HU7142I 空客330（宽体机）"
                android:textColor="@color/resutrant"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tickets_number"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:text="舱位：>7"
                android:textColor="#09a9e5"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/more_cabin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/resturant_button_selector"
            android:gravity="center"
            android:text="更多舱位"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>