<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:background="@color/headertop" >

        <TextView
            android:id="@+id/top_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/topback"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="福分列表"
            android:textColor="@color/bg"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chaxun1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/yyrg_sousuo"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="查询"
            android:textColor="@color/bg"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="时间"
                android:textColor="#4B4B4B"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.4"
                android:background="@color/bg"
                android:drawableRight="@drawable/collapse1"
                android:focusableInTouchMode="false"
                android:paddingBottom="7dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:text="2014.18.88 "
                android:textColor="#4B4B4B"
                android:textSize="11.0sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="至"
                android:textColor="#4B4B4B"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.4"
                android:background="@color/bg"
                android:drawableRight="@drawable/collapse1"
                android:focusableInTouchMode="false"
                android:paddingBottom="7dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:text="2014.18.88 "
                android:textColor="#4B4B4B"
                android:textSize="11.0sp" />

            <TextView
                android:id="@+id/chaxun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/fufen_anniu_biankuang"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingLeft="3dp"
                android:paddingTop="7dp"
                android:text="查询 "
                android:textColor="@color/bg"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5EFFE" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="奖励类型"
                android:textColor="@color/fufen_zi1"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#E5E4E4" >
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="奖励分值"
                android:textColor="@color/fufen_zi1"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#E5E4E4" >
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="当前分值"
                android:textColor="@color/fufen_zi1"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#E5E4E4" >
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="日期"
                android:textColor="@color/fufen_zi1"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#f0f0f0"
		android:dividerHeight="1dp"
		android:background="@color/bg"
        android:layout_above="@+id/lin3"
        android:layout_below="@+id/lin10" >
    </ListView>

    <RelativeLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F8F8F8"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/heji_fen"
            android:text="合计"
            android:textColor="@color/fufen_zi1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/heji_fen"
            android:text="分"
            android:textColor="@color/fufen_zi1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/heji_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>