<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/title_blue" />

    <LinearLayout
        android:id="@+id/classify_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/editext_no_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="选择相册分类"
            android:textColor="@color/new_headertop"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/choose_class"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/arrow_down_gray"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/black_gray" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <com.mall.yyrg.adapter.MyGridView
            android:id="@+id/add_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/update_dialig_yuanjiao_1"
            android:horizontalSpacing="2dp"
            android:listSelector="#00ffffff"
            android:numColumns="4"
            android:padding="5dp"
            android:verticalSpacing="2dp"></com.mall.yyrg.adapter.MyGridView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/submit"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/new_headertop"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>