<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:gravity="fill"
    android:isScrollContainer="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/proxySiteTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            layout="@layout/top" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/proxySiteTop"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tixian_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="现金红包余额"
            android:textColor="#383838"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/tixian_cost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.00"
            android:textColor="#ff2145"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="4.0dip"
                    android:text="申请提现"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="4.0dip"
                    android:text="提现银行信息"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:drawableLeft="@drawable/t1"
                            android:drawablePadding="10.0dip"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dp"
                            android:text="真实姓名"
                            android:textColor="#000"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@id/rname"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:drawableLeft="@drawable/t2"
                            android:drawablePadding="10.0dip"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dp"
                            android:text="身份证号"
                            android:textColor="#000"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/id_card"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:drawableLeft="@drawable/t3"
                            android:drawablePadding="10.0dip"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dp"
                            android:text="提现方式"
                            android:textColor="#000"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/withdrawalsway"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#000" />

                        <ImageView
                            android:id="@+id/imagedown"
                            android:padding="@dimen/space_2"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="@dimen/space_20"
                            android:src="@drawable/xliv"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/x10"
                            />
                    </LinearLayout>
                    <include
                        android:id="@+id/withdrawallist"
                        layout="@layout/withdrawallist"
                        android:visibility="gone"
                        />


                    <LinearLayout
                        android:id="@+id/bankinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout

                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:drawableLeft="@drawable/t3"
                                android:drawablePadding="10.0dip"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="10.0dip"
                                android:paddingRight="10dp"
                                android:text="提现银行"
                                android:textColor="#000"
                                android:textSize="14.0sp" />

                            <TextView
                                android:id="@+id/tixian_bank"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:gravity="left|center_vertical"
                                android:lines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#000" />


                        </LinearLayout>



                        <LinearLayout

                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:drawableLeft="@drawable/t4"
                                android:drawablePadding="10.0dip"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="10.0dip"
                                android:paddingRight="10dp"
                                android:text="银行卡号"
                                android:textColor="#000"
                                android:textSize="14.0sp" />

                            <TextView
                                android:id="@+id/tixian_bankCard"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left|center_vertical"
                                android:lines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#000" />
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="4.0dip"
                    android:text="申请提现详细"
                    android:textColor="#ff888888"
                    android:textSize="16.0sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@id/MorePageTableLayout_Follow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dp"
                            android:text="支付对象"
                            android:textColor="#383838"
                            android:textSize="14.0sp" />

                        <EditText
                            android:id="@id/tixian_handlerId"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:enabled="false"
                            android:hint="请输入支付对象"
                            android:inputType="number"
                            android:singleLine="true"
                            android:text="远大商城"
                            android:textColor="#595858"
                            android:textColorHint="#c6c6c6"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="#fff"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/t5"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dp"
                            android:text="提现金额"
                            android:textColor="#000"
                            android:textSize="14.0sp" />

                        <EditText
                            android:id="@+id/tixian_money"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:ems="10"
                            android:inputType="textPhonetic"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="#c6c6c6"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:drawableLeft="@drawable/t6"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dp"
                            android:text="交易密码"
                            android:textColor="#000"
                            android:textSize="14.0sp" />

                        <EditText
                            android:id="@id/tixian_twoPwd"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:hint="交易密码不是账户登录密码"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="#c6c6c6"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:background="#f6f6f6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="10dip"
                        android:paddingLeft="2.0dip"
                        android:paddingRight="2.0dip"
                        android:paddingTop="10dip" >

                        <Button
                            android:id="@id/tixian_submit"
                            android:layout_width="0.0dip"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.8"
                            android:background="@drawable/corner_round_5dp_green"
                            android:text="确认"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="fill_parent" />

                        <Button
                            android:id="@id/tixian_clear"
                            android:layout_width="0.0dip"
                            android:layout_height="35dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/corner_round_game2048_yellow"
                            android:text="重置"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#ccc" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>