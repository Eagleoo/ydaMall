<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_board_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_page_dianji"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/message_board_face"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/s25381471_97_97" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_board_userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="zhouyi007"
                    android:textColor="#535353"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="发布了一则动态"
                    android:textColor="@color/gray_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/bringtotop"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="置顶"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/move_to_rubblish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/note_delete"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_board_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#6c6c6c"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/message_board_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="2014-08-16 16:35"
                    android:textColor="#6c6c6c"
                    android:textSize="10sp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/message_board_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/liner_border_f6f6f6_no_fillet"
        android:editable="false"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:text="\u3000\u3000近期，有关“奶茶妹妹”主演电影《左耳》中“小耳朵”一角的消息传的沸沸扬扬，最近更有消息称“奶茶妹妹”已经以200万片酬接演该片。8月5日晚20:51分，电影《左耳》导演苏有朋发微博否认这一消息，并称：小耳朵另有其人。"
        android:textColor="#535353"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/message_board_images"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"></LinearLayout>

    <TextView
        android:id="@+id/upload_state"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/datebg"
        android:gravity="center"
        android:text="上传失败,点击重新上传"
        android:textColor="@color/black_gray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/message_board_split"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/message_board_frame_item_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/message_board_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/message_board_praise"
            android:padding="5dp"
            android:text="123"
            android:textColor="#535353"
            android:textSize="12sp"></TextView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/message_board_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/message_board_comment"
                android:padding="5dp"
                android:text="123333"
                android:textColor="#535353"
                android:textSize="12sp"></TextView>

            <TextView
                android:id="@+id/no_read"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|right"
                android:background="@drawable/dot_corner_round_10dp_red"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/message_board_priase_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/message_board_forward"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/message_board_forward" />
    </LinearLayout>

</LinearLayout>