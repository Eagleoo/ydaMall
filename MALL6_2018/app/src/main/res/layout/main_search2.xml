<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_focus"
    android:layout_width="match_parent"
    android:layout_height="33.0dip"
    android:layout_gravity="center_vertical"
    android:background="@drawable/liner_border_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:paddingLeft="10.0dip">

    <EditText
        android:id="@+id/main_layout1_sreach"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.75"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="要查询的商品"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="#c6c6c6"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/main_layout1_speak"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:src="@drawable/speak" />

    <ImageView
        android:id="@+id/main_layout1_sbtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/sbtn_bule" />

</LinearLayout>