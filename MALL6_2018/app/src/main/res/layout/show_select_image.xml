<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/headertop" >

        <TextView
            android:id="@+id/top_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/topback" />

        <TextView
            android:id="@+id/show_image_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/bg"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:padding="10dp"
            android:text="删除"
            android:textColor="#ffffffff"
            android:textSize="13.5sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top" >
        <com.picture.reduce.enlarge.viewpager.ViewPager
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.picture.reduce.enlarge.viewpager.ViewPager>
        <RelativeLayout
            android:id="@+id/re_yulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#cc222222"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >
            <TextView
                android:id="@+id/show_wancheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="完成"
                android:textColor="#DBDBDB"
                android:textSize="15sp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>