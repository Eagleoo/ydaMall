<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/new_yda__top_zanwu" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/goodsname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yyrg_shouye_zi"
            android:textSize="16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/goodsprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="价格："
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/allprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="总价："
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/check_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:button="@drawable/checkbox"
                android:checked="true"
                android:padding="5dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="热购："
                android:textColor="#ff535353"
                android:textSize="13.0sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/yyrg_xiangq_biankuang" >

                <Button
                    android:id="@id/shop_car_button1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                 
                    android:background="@drawable/yyrg_jian"
                    android:padding="1.0dip"
                    android:tag="del" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#f0f0f0" >
                </LinearLayout>


                    <TextView
                        android:id="@id/shop_car_t7"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/yyrg_shuzi"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|center_vertical"
                        android:singleLine="true"
                        android:tag="add"
                        android:text="1"
                        android:textColor="#ff535353"
                        android:textSize="14.0sp" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#f0f0f0" >
                </LinearLayout>

                <Button
                    android:id="@id/shop_car_button2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                 
                    android:background="@drawable/yyrg_jia"
                    android:padding="1.0dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="人次"
                android:textColor="#ff535353"
                android:textSize="13.0sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <com.mall.yyrg.MyProgressView
                android:id="@+id/myProgress"
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >
            </com.mall.yyrg.MyProgressView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/goods_canyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yyrg_progress"
                    android:textSize="9.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="9.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zongxu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="390"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="9.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="总需人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="9.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shengyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="390"
                    android:textColor="@color/yyrg_shouye_lanzi"
                    android:textSize="9.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="剩余人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="9.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>