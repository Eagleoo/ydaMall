<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/zr_renqi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/bg"
        android:orientation="vertical"
        android:tag="1" >

        <ImageView
            android:id="@+id/img_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/new_yda_zanwu1" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="价值：￥1000.00"
            android:textColor="@color/yyrg_shouye_zi"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="价值：￥1000.00"
            android:textColor="@color/yyrg_shouye_zi"
            android:textSize="11.0sp" />

        <com.mall.yyrg.MyProgressView
            android:id="@+id/pro_goods"
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >
        </com.mall.yyrg.MyProgressView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/yicanyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="390"
                    android:textColor="@color/yyrg_progress"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zongxu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="390"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="总需人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shengyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="390"
                    android:textColor="@color/yyrg_shouye_lanzi"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="剩余人次"
                    android:textColor="@color/yyrg_qianhui"
                    android:textSize="10.0sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/to_buy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/yyrg_chengse"
            android:gravity="center"
            android:padding="5dp"
            android:text="立即参与"
            android:textColor="@color/bg"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dp" />
    </LinearLayout>

</LinearLayout>