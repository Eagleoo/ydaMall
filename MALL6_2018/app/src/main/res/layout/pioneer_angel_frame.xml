<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/liner_border_white"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="辅导老师："
                        android:textColor="#ff535353"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/angel_zsdw1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/liner_border_white"
                        android:hint="若不知,请致电4006663838"
                        android:lines="1"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip"
                        android:singleLine="true"
                        android:textColor="#535353"
                        android:textColorHint="#c6c6c6"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/request_angel_name_line"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="5.0dip" >

                    <TextView
                        android:id="@+id/request_angel_name"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="辅导老师："
                        android:textColor="#c6c6c6"
                        android:textSize="16.0sp"
                        android:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="5.0dip"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:textColor="#ff535353"
                        android:textSize="16.0sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/liner_border_white"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@drawable/liner2_bottom_border"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="创业包："
                        android:textColor="#ff535353"
                        android:textSize="16.0sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/angel_jian"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liner_border"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:text="－"
                            android:textColor="#535353"
                            android:textStyle="bold" >
                        </Button>

                        <EditText
                            android:id="@+id/angel_wangMoney1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="0.7"
                            android:background="@drawable/liner2_border_white"
                            android:enabled="false"
                            android:gravity="center_horizontal"
                            android:inputType="textPhonetic"
                            android:lines="1"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5.0dip"
                            android:singleLine="true"
                            android:text="1"
                            android:textColor="#ff535353" />

                        <Button
                            android:id="@+id/angel_jia"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liner_border"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:text="＋"
                            android:textColor="#535353"
                            android:textStyle="bold" >
                        </Button>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="支付金额："
                        android:textColor="#ff535353"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/angel_show_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30000"
                        android:textColor="#cf0000" >
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="元"
                        android:textColor="#535353" >
                    </TextView>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10.0dip"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="10.0dip"
                android:text="支付方式："
                android:textColor="#ff535353"
                android:textSize="16.0sp" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/pay_money_type_style2" />

            <TableLayout
                android:id="@+id/request_angel_two_table"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/liner_border_white"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="交易密码："
                        android:textColor="#ff535353"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/angel_twoPwd1"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/liner_border_white"
                        android:hint="请输入您的交易密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textColorHint="#c6c6c6"
                        android:textSize="13sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/community_cb_check_selector"
                    android:checked="true" />

                <TextView
                    android:id="@+id/tv_agree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意《移动创客合同》"
                    android:textColor="#535353"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/angel_submit1"
                    android:layout_width="0.0dip"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_submit_background"
                    android:text="确认"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/angel_clear1"
                    android:layout_width="0.0dip"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_reset_background"
                    android:text="清空"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>