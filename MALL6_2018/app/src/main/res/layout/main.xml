<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff">

    <com.mall.view.ListenedScrollView
        android:id="@id/maingrid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/highView"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/maintop"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="#49AFEF"
                android:gravity="top|left|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/selectcity"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <com.mall.view.MoreTextView
                        android:id="@id/main_layout4_city"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:drawablePadding="@dimen/x2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxWidth="75dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="成都"
                        android:textColor="#ffffffff"
                        android:textSize="13.0sp"
                        app:drawable_src="@drawable/toptitledown"
                        app:imageHight="12dp"
                        app:imageLocation="right"
                        app:imageWidth="12dp"

                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/inputline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/main_layout1_sreach"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="搜索商家"
                        android:paddingLeft="10dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/main_layout1_speak"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right|center"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/speak" />

                    <ImageView
                        android:id="@+id/main_layout1_sbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right|center"
                        android:onClick="click"
                        android:padding="5dp"
                        android:src="@drawable/sbtn_bule" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:onClick="click"
                    android:src="@drawable/c1" />

                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/c2"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:onClick="click"
                        android:src="@drawable/c22" />

                    <TextView
                        android:id="@+id/red_text"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/community_yellow_point_circle_shape"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/topbanner"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:AutoPlayTime="3000"
                app:pointNormal="@drawable/dot_focusedline"
                app:pointSelect="@drawable/dot_normalline"
                app:pointsPosition="CENTER" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/aa"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="1"
                    android:text="餐饮美食"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ab"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="7"
                    android:text="酒店住宿"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ac"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="2"
                    android:text="休闲娱乐"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ad"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="10"
                    android:text="咖啡茶饮"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ae"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="12"
                    android:text="健身运动"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/af"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="8"
                    android:text="旅游度假"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ag"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="15"
                    android:text="网吧游戏"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ah"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="4"
                    android:text="美容美发"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ai2"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="16"
                    android:text="医疗服务"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/t10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/aj"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="-1"
                    android:text="更多分类"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="click"
                android:scaleType="fitXY"
                android:src="@drawable/redp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/carImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y1"
                android:adjustViewBounds="true"
                android:onClick="click"
                android:scaleType="fitXY"
                android:src="@drawable/car_bg" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y1"
                android:layout_marginTop="@dimen/y1"
                android:adjustViewBounds="true"
                android:onClick="click"
                android:scaleType="fitXY"
                android:src="@drawable/banneright"
                android:paddingTop="5.0dip"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:scaleType="fitStart"
                    android:src="#ffffff" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="|"
                    android:textColor="#49AFEF" />

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:text="推荐商家"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tag2"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/tagiv"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/homeiv" />

                    <TextView
                        android:id="@+id/numberbustv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/tagiv"
                        android:text="0"
                        android:textColor="#c0c0c0"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tomap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/iamthat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:text="附近"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@id/main_layout4_lmsjList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffeeeeee"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:paddingTop="5.0dip">

                <com.mall.util.ListViewForScrollView
                    android:id="@+id/listcont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:orientation="horizontal"
                android:padding="5dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/new_layout4_loadmore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:onClick="click"
                    android:padding="5.0dip"
                    android:text="查看全部"
                    android:textSize="17.0sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/near" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:background="#F4F4F4"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/bottomviewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp" />

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    app:AutoPlayTime="3000"
                    app:pointsPosition="CENTER"
                    app:pointsVisibility="false" />

            </LinearLayout>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:background="#F4F4F4"
                app:ci_drawable="@drawable/black_radius_square"
                app:ci_height="4dp"
                app:ci_margin="9dp"
                app:ci_width="25dp" />


        </LinearLayout>
    </com.mall.view.ListenedScrollView>


    <ImageView
        android:id="@+id/backtop_iv"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:src="@drawable/scroller" />

</RelativeLayout>