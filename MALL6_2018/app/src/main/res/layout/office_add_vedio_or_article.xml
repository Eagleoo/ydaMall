<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <include layout="@layout/title_blue" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/editextborder"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_name_choosed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="文章分类："
                android:textColor="@color/black_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/classtex"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_down_gray"
                android:gravity="center_vertical"
                android:text="店主日志"
                android:textColor="@color/black_gray" />

            <TextView
                android:id="@+id/sec"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_down_gray"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black_gray"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:text="标题"
            android:textColor="@color/black_gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/editextborder"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/urllayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vedio_img"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/add_vedio_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/sel_photo" />
            </FrameLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:text="视频封面地址"
                android:textColor="@color/black_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/editextborder"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:text="视频地址"
                    android:textColor="@color/black_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/vedio_yulan"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/headertop"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="预览"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/vedio_url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/editextborder"
                android:gravity="center_vertical"
                android:hint="http://player.youku.com/player.php/sid/XNTI1MDYzNzk2/v.swf"
                android:padding="5dp"
                android:textColorHint="#c6c6c6"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:text="文章内容"
                android:textColor="@color/black_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/editextborder"
                android:gravity="top"
                android:minHeight="150dp"
                android:paddingLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>