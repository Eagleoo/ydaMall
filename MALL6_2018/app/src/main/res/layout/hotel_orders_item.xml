<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staff_manager_user_reward_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="horizontal"
    tools:context="com.mall.comment.LMSJComment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/hotel_rl_state_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/hotel_item_icon"
                android:drawablePadding="10dp"
                android:text="酒店"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="预定失败"
                android:textColor="@color/green_query"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hotel_rl_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel_rl_state_view"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="维也纳酒店"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="￥ 1800" />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/hotel_rl_money"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="订单号:123456"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/check_in_time_and_outtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_number"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="2015-11-11至2015-12-10"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/check_in_time_and_outtime"
            android:text="更多详情"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>