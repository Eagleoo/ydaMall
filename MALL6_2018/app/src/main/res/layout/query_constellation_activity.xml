<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/query_star_bg" />

        <com.mall.serving.community.view.textview.TextViewBack
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/community_press_blue_deep_selector"
            android:drawableLeft="@drawable/community_topback_selector"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="星座运势"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/query_rg_arrow_selector"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="今日"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/query_rg_arrow_selector"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="明日"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/query_rg_arrow_selector"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="本周"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_con"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/community_blue_point_circle_shape"
            android:drawableTop="@drawable/query_star_aries"
            android:gravity="center"
            android:padding="10dp"
            android:text="白羊座"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1" />

</LinearLayout>