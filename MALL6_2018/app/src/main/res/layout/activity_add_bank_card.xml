<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/accountbake"
            android:layout_marginLeft="5dp"
            android:layout_margin="10dp"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/lefttitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加银行卡"
            android:textColor="#000000"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bf767675"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/nametag"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="持卡人姓名"
            android:textSize="13sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textSize="13sp"
            android:textColor="#bf767675"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/addbankcardprompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/accountprompt"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bf767675"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/caridtag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="银行卡号"
            android:textSize="13sp"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/banknumber"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textSize="13sp"
            android:textColor="#bf767675"
            android:background="@null"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:maxLength="26"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/accountprompt"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:visibility="invisible"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/showbanknameline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/banknametag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="发卡行"
                android:textSize="13sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/bankname"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/accountprompt"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="invisible"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/banknamezhihangtag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="开户行支行"
                android:textSize="13sp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/bankzhihangname"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:background="@null"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/accountprompt"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="invisible"
                />

        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bf767675"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/idcard_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <TextView
                android:id="@+id/useridtag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="身份证"
                android:textSize="13sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/bank_idCard"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="13sp"
                android:textColor="#bf767675"
                android:layout_marginLeft="10dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/accountprompt"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="invisible"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/phone_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/phonetag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联系电话"
                android:textSize="13sp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="3.5"
                android:background="@null"
                android:text=""
                android:textColor="#000000"
                android:hint="请输入电话"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/accountprompt"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="invisible"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/phone_yanzlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:id="@+id/yzmpic"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="图形验证码"
                android:textSize="13sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/yzmpic_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2.7"
                android:background="@null"
                android:text=""
                android:hint="请输入图形验证码"
                android:textColor="#bf767675"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/yzmpic_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bf767675"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="验证码"
                android:textSize="13sp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/yzminput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2.7"
                android:background="@null"
                android:text=""
                android:textColor="#bf767675"
                android:textSize="13sp" />

            <Button
                android:id="@+id/update_basic_user_info_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_round_5dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="获取验证码"
                android:textColor="#2498e2"
                android:layout_gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/passwordline"
        >
        <TextView
            android:id="@+id/passwordtag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="交易密码"
            android:textSize="13sp"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/pass_editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.5"
            android:background="@null"
            android:text=""
            android:textColor="#bf767675"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/accountprompt"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:visibility="invisible"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bf767675"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />


    <TextView
        android:id="@+id/next_tv"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="下一步"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#FF2146"
        />

</LinearLayout>
