<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1" >

        <TextView
            android:id="@+id/moren_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/new_shouhuo1"
            android:gravity="center"
            android:text="默认地址"
            android:textColor="#424242"
            android:textSize="15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/shop_address_item_bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/shop_address_item_delete"
            android:background="#00ffffff"
            android:drawableLeft="@drawable/new_shouhuo_bj"
            android:gravity="center"
            android:paddingRight="20.0dip"
            android:text="编辑"
            android:textColor="#b2b2b2" />

        <Button
            android:id="@id/shop_address_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:drawableLeft="@drawable/new_shouhuo_sc"
            android:gravity="center"
            android:paddingRight="20.0dip"
            android:text="删除"
            android:textColor="#b2b2b2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/shop_address_item_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="四川省 - 成都市 - 锦江区"
                android:textColor="#595959"
                android:textSize="14sp" />

            <TextView
                android:id="@id/shop_address_item_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="顺城大街308号 3栋1单元1楼1号"
                android:textColor="#595959"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/shop_address_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="张三"
                    android:textColor="#595959"
                    android:textSize="14sp" />

                <TextView
                    android:id="@id/shop_address_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="13655454111"
                    android:textColor="#595959"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:src="@drawable/new_shouhuo_xuanz"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>