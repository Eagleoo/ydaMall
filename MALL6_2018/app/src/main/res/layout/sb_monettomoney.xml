<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/liner_border_white_no_fillet"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sbto_sb"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/liner2_bottom_border"
                    android:drawableRight="@drawable/jt"
                    android:padding="10dp"
                    android:text="商币余额：00.00"
                    android:textColor="#cf0000"
                    android:textSize="16sp" >
                </TextView>

                <TextView
                    android:id="@+id/sbto_jf"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:drawableRight="@drawable/jt"
                    android:padding="10dp"
                    android:text="消费券余额：00.00"
                    android:textColor="#13B548"
                    android:textSize="16sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="对方账户："
                        android:textColor="#535353" >
                    </TextView>

                    <EditText
                        android:id="@+id/sbto_userid"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/liner_border_white_no_fillet"
                        android:lines="1"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sbto_userInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="姓名：萨多瓦 		电话：13688477777"
                        android:textColor="#c6c6c6"
                    android:visibility="gone" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="消费金额："
                        android:textColor="#535353" >
                    </TextView>

                    <EditText
                        android:id="@+id/sbto_money"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/liner_border_white_no_fillet"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sbto_blLine"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/sbto_sbbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="商币：50"
                        android:textColor="#cf0000" >
                    </TextView>

                    <TextView
                        android:id="@+id/sbto_jfbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="消费券：50"
                        android:textColor="#13B548" >
                    </TextView>

                    <TextView
                        android:id="@+id/sbto_updatebl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="修改比例"
                        android:textColor="@color/blue_ball" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="交易密码："
                        android:textColor="#535353" >
                    </TextView>

                    <EditText
                        android:id="@+id/sbto_twopwd"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/liner_border_white_no_fillet"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/sbto_submit"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_submit_background"
                        android:text="确认"
                        android:textColor="#ffffff" >
                    </Button>

                    <Button
                        android:id="@+id/sbto_reset"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_reset_background"
                        android:text="重置"
                        android:textColor="#ffffff" >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>