<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="303px"
        android:background="#d7d7d7"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="303px"
            android:layout_marginLeft="23px"
            android:layout_marginRight="23px"
            android:layout_marginTop="30px"
            android:background="@drawable/software">

            <ImageView

                android:layout_width="147px"
                android:layout_height="165px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="44px"
                android:src="@drawable/cartitleiv1" />

            <com.mall.view.AutoPollRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:layout_marginLeft="27px"
                android:layout_weight="1"
                android:background="#ffffff" />

        </LinearLayout>
        <View
            android:id="@+id/outcar_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
</layout>

