<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/space_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mall.util.CircleImageView
            android:id="@+id/face_civ"
            android:layout_width="@dimen/space_45"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center_vertical"
            android:src="@drawable/new_huiyuan_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_70">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.54"
                    android:text="我心飞扬"
                    android:textColor="#355D93"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/content_mesage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="加油!好样的"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:text="3小时前"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/xinxi_iv"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/isattention_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/space_18"
                android:paddingBottom="@dimen/space_2"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:paddingTop="@dimen/space_2"
                android:text="已关注"
                android:textColor="#49AFEF"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#E7E7E7" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#E7E7E7" />


</LinearLayout>