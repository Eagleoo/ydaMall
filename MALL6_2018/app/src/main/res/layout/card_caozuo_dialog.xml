<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bk7"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="选择操作"
        android:textColor="@color/card_shenhei"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/yidong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="移动名片到分组"
        android:textColor="@color/card_qianhei"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:background="#f0f0f0"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/xiugai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:visibility="gone"
        android:text="修改名片"
        android:textColor="@color/card_qianhei"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#f0f0f0"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="删除名片"
        android:textColor="@color/card_qianhei"
        android:textSize="14sp" />
     <LinearLayout
         android:id="@+id/tuijian_lin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#f0f0f0"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/tuijian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="推荐名片"
        android:textColor="@color/card_qianhei"
        android:textSize="14sp" />
     <LinearLayout
         android:id="@+id/f_xinxi_lin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#f0f0f0"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/f_xinxi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="发送信息"
        android:textColor="@color/card_qianhei"
        android:textSize="14sp" />

</LinearLayout>