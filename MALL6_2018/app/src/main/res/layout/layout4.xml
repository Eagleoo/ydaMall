<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@id/main_layout4_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/main_layout4_top"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_alignParentTop="true"
                android:background="#ff2145"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip" >

                <ImageView
                    android:id="@id/topback"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left|center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="20.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/topback" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="联盟商家"
                    android:textColor="@color/white"
                    android:textSize="18.0sp" />

                <ImageView
                    android:id="@id/main_layout4_saoyisao"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="5.0dip"
                    android:src="@drawable/lm_iamwhere" />

                <TextView
                    android:id="@id/main_layout4_city"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxWidth="75dp"
                    android:paddingRight="5.0dip"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textSize="13.0sp" />

                <ImageView
                    android:id="@id/main_layout4_fujinde"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="15.0dip"
                    android:src="@drawable/lm_fujinde" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/main_layout4_temp_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_layout4_top"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/main_layout4_meishi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/aa"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="1"
                    android:text="餐饮美食"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_jiudian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ab"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="7"
                    android:text="酒店住宿"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_yule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ac"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="2"
                    android:text="休闲娱乐"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_kafei"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ad"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="10"
                    android:text="咖啡茶饮"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_jianshen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ae"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="12"
                    android:text="健身运动"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/main_layout4_temp_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_layout4_temp_1"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/main_layout4_lvyou"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/af"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="8"
                    android:text="旅游度假"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_wangba"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ag"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="15"
                    android:text="网吧游戏"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_meirong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ah"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="4"
                    android:text="美容美发"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_yaodian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ai2"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="16"
                    android:text="医疗服务"
                    android:textSize="12sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/main_layout4_gengduo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/aj"
                    android:gravity="center"
                    android:onClick="click"
                    android:tag="-1"
                    android:text="更多分类"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_layout4_temp_divde1"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/main_layout4_temp_3"
                android:background="#e1e1e1"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/main_layout4_temp_divde2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/main_layout4_temp_divde1"
                android:background="#e2e2e2"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@id/main_layout4_temp_7"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/main_layout4_temp_divde2"
                android:background="#e9e9e9"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@id/main_layout4_temp_8"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/main_layout4_temp_7"
                android:background="#e9e9e9"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/main_layout4_temp_new"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_layout4_temp_8"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/tv_tuijian_count"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="0家"
                    android:textColor="#ff636363"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ffeeeeee" >

                    <include layout="@layout/main_search2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/main_layout4_lmsjList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_layout4_temp_new"
                android:background="#ffeeeeee"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    android:id="@id/new_layout4_loadmore"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/liner2_border_white"
                    android:gravity="center_horizontal"
                    android:padding="5.0dip"
                    android:text="显示更多..."
                    android:textColor="#ff535353"
                    android:textSize="17.0sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_layout4_zhongdiantuijian"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main_layout4_lmsjList"
                android:layout_marginTop="10dp"
                android:background="@drawable/lmsj_bg_"
                android:gravity="center"
                android:text="　重点推荐　"
                android:textColor="#535353"
                android:textSize="16sp" >
            </TextView>

            <FrameLayout
                android:id="@id/advert"
                android:layout_width="fill_parent"
                android:layout_height="130.0dip"
                android:layout_below="@id/main_layout4_zhongdiantuijian"
                android:layout_marginBottom="10dp" >

                <android.support.v4.view.ViewPager
                    android:id="@id/vp"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35.0dip"
                    android:layout_gravity="bottom"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="10dp" >

                    <LinearLayout
                        android:id="@id/imgDian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:gravity="center" >

                        <View
                            android:id="@id/v_dot0"
                            style="@style/dot_style"
                            android:background="@drawable/dot_focused" />

                        <View
                            android:id="@id/v_dot1"
                            style="@style/dot_style" />

                        <View
                            android:id="@id/v_dot2"
                            style="@style/dot_style" />

                        <View
                            android:id="@id/v_dot3"
                            style="@style/dot_style" />

                        <View
                            android:id="@id/v_dot4"
                            style="@style/dot_style" />

                        <View
                            android:id="@id/v_dot5"
                            style="@style/dot_style"
                            android:visibility="gone" />

                        <View
                            android:id="@id/v_dot6"
                            style="@style/dot_style"
                            android:visibility="gone" />

                        <View
                            android:id="@id/v_dot7"
                            style="@style/dot_style"
                            android:visibility="gone" />

                        <View
                            android:id="@id/v_dot8"
                            style="@style/dot_style"
                            android:visibility="gone" />

                        <View
                            android:id="@id/v_dot9"
                            style="@style/dot_style"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>