<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.mall.view.messageboard.ViewPager
        android:id="@+id/message_board_pic_show_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >
    </com.mall.view.messageboard.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|right" >
        <TextView 
            android:visibility="gone"
            android:padding="5dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"        
            android:textColor="@color/black_gray"
            android:text="长按住保存图片到相册"
            android:gravity="center_vertical"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:textColor="@color/black_gray"/>
        <TextView
            android:id="@+id/picindicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="1/9"
             android:background="@drawable/dot_corner_round_20dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    <include
        android:id="@+id/top"
        android:layout_gravity="top"
        layout="@layout/top_right_textview" />
</FrameLayout>