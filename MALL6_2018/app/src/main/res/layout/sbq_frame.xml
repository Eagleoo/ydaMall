<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/top_top"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="top"
        android:background="#f37d90"
        android:orientation="horizontal"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip" >

        <ImageView
            android:id="@id/topback"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/topback" />

        <TextView
            android:id="@id/topCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="兑换排行"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />

        

            <TextView
                android:id="@+id/imgtitle_320"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="他们都在换"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#e5e5e5" >

        <RadioButton
            android:id="@id/sbq_frame_rehuan"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/rehuan_duihuan"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="热换商品"
            android:textColor="#969696"
            android:textSize="13.0sp" />

        <RadioButton
            android:id="@id/sbq_frame_fenlei"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/fenlei_duihuan"
            android:drawablePadding="2.0dip"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="全部分类"
            android:textColor="#969696"
            android:textSize="13.0sp" />

        <RadioButton
            android:id="@id/sbq_frame_jiage"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/jiage_duihuan"
            android:drawablePadding="2.0dip"
            android:gravity="center"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="价格排序"
            android:textColor="#969696"
            android:textSize="13.0sp" />
    </LinearLayout>

    <ScrollView
        android:id="@id/sbq_select_line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <LinearLayout
            android:id="@id/sbq_selected_dataLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical" />
    </ScrollView>

    <ListView
        android:id="@id/sbq_frame_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#ffeeeeee"
        android:divider="#ffefefef"
        android:dividerHeight="1.0dip" />

</LinearLayout>