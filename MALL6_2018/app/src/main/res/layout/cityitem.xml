<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:orientation="vertical"
    android:id="@+id/rootitem"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/space_8">

        <com.mall.util.CircleImageView
            android:id="@+id/areaheadportrait_cv"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_toRightOf="@+id/areaheadportrait_cv"
            android:orientation="vertical"
            android:padding="@dimen/space_2">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_15">

                <TextView
                    android:id="@+id/areaname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四川成都圈"
                    android:textSize="13sp"

                    />

                <ImageView
                    android:id="@+id/renqi_iv"
                    android:layout_width="@dimen/space_22"
                    android:layout_height="@dimen/space_22"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_toRightOf="@+id/areaname_tv"
                    android:src="@drawable/rq" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信息 1848525"
                    android:textColor="#9B9B9B"
                    android:textSize="10sp" />

                <View
                    android:layout_width="@dimen/space_9"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/renqi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气 2500146"
                    android:textColor="#9B9B9B"
                    android:textSize="10sp" />


            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/switcharea_ll"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/space_15"
                android:layout_height="@dimen/space_15"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/qh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:text="切换"
                android:textColor="#9B9B9B"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>