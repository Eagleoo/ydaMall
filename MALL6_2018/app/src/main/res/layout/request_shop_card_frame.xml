<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                layout="@layout/top" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="60.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" >

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liner_border_white"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="0.5"
                            android:gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:text="辅导老师："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/vip_zsdw1"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/liner_border_white"
                            android:hint="请输入您的辅导老师"
                            android:lines="1"
                            android:paddingBottom="5.0dip"
                            android:paddingTop="5.0dip"
                            android:singleLine="true"
                            android:textColor="#535353"
                            android:textColorHint="#c6c6c6" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/request_site_name_line"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_marginLeft="2.0dip"
                            android:layout_marginRight="2.0dip"
                            android:layout_weight="1"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="10.0dip"
                            android:text="辅导老师："
                            android:textColor="#c6c6c6"
                            android:textSize="16.0sp"
                            android:visibility="gone" />
                    </TableRow>
                </TableLayout>

                <include
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    layout="@layout/pay_money_type_style2" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/liner_border_white"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/liner2_bottom_border"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:layout_weight="0.7"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="购物卡金额："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/vip_wangMoney1"
                            android:layout_width="0.0dip"
                            android:layout_height="40dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/liner_border_white"
                            android:inputType="textPhonetic"
                            android:lines="1"
                            android:paddingBottom="5.0dip"
                            android:paddingTop="5.0dip"
                            android:singleLine="true"
                            android:text="1000"
                            android:textColor="#ff535353" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:layout_weight="0.7"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:singleLine="true"
                            android:text="赠送城市经理 ："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@+id/siteType1"
                            android:layout_width="0.0dip"
                            android:layout_height="40dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:text="否"
                            android:textColor="#cf0000"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/liner_border_white"
                    android:paddingLeft="1.0dip"
                    android:shrinkColumns="0"
                    android:stretchColumns="0" >

                    <TableRow
                        android:id="@+id/request_site_two_2"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:paddingBottom="5.0dip"
                        android:paddingTop="5.0dip" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="0.5"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="交易密码："
                            android:textColor="#ff535353"
                            android:textSize="16.0sp" />

                        <EditText
                            android:id="@+id/vip_twoPwd1"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/liner_border_white"
                            android:hint="请输入您的交易密码"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textColorHint="#c6c6c6" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/vip_submit1"
                        android:layout_width="0.0dip"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/button_submit_background"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="确认"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/vip_clear1"
                        android:layout_width="0.0dip"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/button_reset_background"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="清空"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>