<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5.0dip"
    android:background="#ffffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/pay_commit_frame_item_img"
        android:layout_width="70.0dip"
        android:layout_height="90.0dip"
        android:adjustViewBounds="true"
        android:src="@drawable/zw174" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10.0dip" >

        <TextView
            android:id="@id/pay_commit_frame_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我是产品名称..."
            android:textColor="#ff535353" />

        <LinearLayout
            android:id="@id/pay_commit_frame_item_color_size_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/pay_commit_frame_item_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:text="颜色：红色"
            android:textColor="@color/gray_text"  />

            <TextView
                android:id="@id/pay_commit_frame_item_size"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left"
                android:text="尺码：XXL"
                android:layout_marginLeft="20dp"
             android:textColor="@color/gray_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@id/pay_commit_frame_item_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/headertop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="单价："
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@id/pay_commit_frame_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="￥801.00"
                    android:textColor="#ffff0000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮费："
                    android:textColor="@color/gray_text" 
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@id/pay_commit_frame_item_youfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥10.00"
                    android:textColor="#ffff0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费券："
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@id/pay_commit_frame_item_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥801.00"
                    android:textColor="#ff009900" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@id/pay_commit_frame_item_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:hint="请输入你的留言..."
            android:maxLines="3"
            android:textColor="#ff535353"
            android:textColorHint="#c6c6c6"
            android:textSize="14sp"
             />
    </LinearLayout>

</LinearLayout>