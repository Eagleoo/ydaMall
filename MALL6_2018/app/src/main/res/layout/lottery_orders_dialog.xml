<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg" >

    <RelativeLayout
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/new_headertop"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/top_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:clickable="true"
            android:drawableLeft="@drawable/topback"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的彩票订单"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView1"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lottery_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ed6d46"
                android:padding="10dp"
                android:text="订单信息"
                android:textColor="@color/bg"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/liner2_bottom_border"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="订单编号："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m4016140807171632"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/liner2_bottom_border"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="支付时间："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/zhifu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014/8/7 17:16:32  "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/liner2_bottom_border"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="投注金额："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/touzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12元"
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/liner2_bottom_border"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="中奖金额："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/zhongjiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="刘芳 "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/liner2_bottom_border"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="订单状态 ："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="未中奖"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ed6d46"
                android:padding="10dp"
                android:text="开奖号码"
                android:textColor="@color/bg"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/liner2_bottom_border"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/kaijiangnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:text="0000000"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/allqiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/hong1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_hongqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />

                    <TextView
                         android:id="@+id/hong2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_hongqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />

                    <TextView
                         android:id="@+id/hong3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_hongqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />

                    <TextView
                        android:id="@+id/hong4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_hongqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />

                    <TextView
                         android:id="@+id/hong5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_hongqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />

                    <TextView
                         android:id="@+id/hong6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_hongqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />

                    <TextView
                        android:id="@+id/lan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lottery_lanqiu"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/bg" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ed6d46"
                android:padding="10dp"
                android:text="投注信息"
                android:textColor="@color/bg"
                android:textSize="17sp" />

            <com.mall.util.ListViewForScrollView
                android:id="@+id/list_touzhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.mall.util.ListViewForScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>